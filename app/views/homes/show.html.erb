<% provide(:title, @home.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @home.name %>
      </h1>

      <p>
        <strong>Name:</strong>
        <%= @home.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @home.address %>
      </p>

      <%= link_to 'Edit', edit_home_path(@home) %> |
      <%= link_to 'Back', homes_path %> |

    </section>

    <P>
      <h5>
        <table>
          <thead>
            <tr>
              <th>Housemates</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |users| %>
            <tr>
              <td><%=users.name%></td>
              <td><%= link_to("Pay Roomate", '/homes/1') %></td>
              <td><%= if @home.users_id == current_user.id
                    link_to("Remove User", remove_homes_path(:user => users))
                  else

              end %></td>
            </tr>
          <% end %>
        </tbody>
        </table>
      </h5>
    </p>
  </aside>

