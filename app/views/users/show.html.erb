<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <h3> Current Home: </h3>
  <%= if @user.homes_id.blank?
        link_to("Create Home", '/homes')
      else
        link_to("Go To Home", '/homes')
      end %>

  </br>
</div>
